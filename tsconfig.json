{
  "compilerOptions": {
    // "target": "es6", // for dapp
    "target": "es2020", // for hardhat testing
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "module": "esnext", // for dapp
    "module": "commonjs", // for hardhat testing
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
